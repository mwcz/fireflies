{
  "name": "fireflies",
  "version": "1.0.0",
  "description": "A particle engine using image masks.",
  "main": "index.js",
  "scripts": {
    "test": "npm run build",
    "start": "browser-sync start --server --serveStatic src --files 'src/**/*' --no-inject-changes --directory",
    "build": "npm run babel && npm run bundle && npm run minify && npm run script-tag-rewrite",
    "babel": "babel src --out-dir dist --copy-files --presets=env --ignore lib/*",
    "minify": "for f in dist/js/*.js; do uglifyjs -c -o $f $f; done",
    "clean": "rm -rf dist/*",
    "script-tag-rewrite": "./scripts/script-tag-rewrite.sh > dist/index.html",
    "bundle": "npm run bundle-lib && npm run bundle-js",
    "bundle-lib": "./scripts/libdump.sh > dist/js/bundle.min.js",
    "bundle-js": "./scripts/jsdump.sh | babel --presets=env >> dist/js/bundle.min.js"
  },
  "author": "mwcz <mwc@clayto.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.6",
    "browser-sync": "^2.18.2",
    "uglify-js": "^3.4.7"
  }
}
